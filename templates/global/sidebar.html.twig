<div class="card mb-3">
    <div class="card-body">
        {% if is_granted("ROLE_USER") %}
            <a href="{{ path('question_create') }}" class="btn btn-primary">Ask question</a>
        {% else %}
            <a href="{{ path('user_login') }}" class="btn btn-success">Login</a>
        {% endif %}
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="tag-list">
            {% for tag in tags %}
                <a href="#" class="btn btn-light">{{ tag.name }}</a>
            {% endfor %}
        </div>
    </div>
</div>